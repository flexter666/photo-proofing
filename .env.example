# Environment Configuration
ENV=production

# Database Configuration
DATABASE_URL=postgresql://postgres:change_me_strong_password@db:5432/proofing
POSTGRES_DB=proofing
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change_me_strong_password

# Application Configuration
SECRET_KEY=change_me_to_a_very_long_random_string_at_least_32_characters
DEBUG=false
RELOAD=false

# Domain Configuration (for production)
DOMAIN=your-domain.com

# Docker Registry Configuration
GHCR_OWNER=your_github_username_or_org
VERSION=latest

# Redis Configuration (optional, uncomment if using Redis)
# REDIS_URL=redis://redis:6379/0

# Email Configuration (for Let's Encrypt notifications)
# LETSENCRYPT_EMAIL=your-email@domain.com

# File Upload Configuration
MAX_UPLOAD_SIZE=50MB
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,tiff,bmp

# Logging Configuration
LOG_LEVEL=INFO